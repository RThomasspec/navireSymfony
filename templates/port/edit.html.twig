{% extends 'base.html.twig' %}


{% block body %}

    {{  form_start(form) }}
    <div class="container">

        <div class="col-8" id="some-custom-id">
            {{ form_label(form.indicatif, 'indicatif') }}
            {{  form_widget(form.indicatif, {'attr': {'placeholder': 'Indicatif'}}) }}
        </div>

        <div class="col-8" id="some-custom-id">
            {{ form_label(form.nom, 'Nom du port') }}
            {{  form_widget(form.nom, {'attr': {'placeholder': 'Saisir le nom du port '}}) }}
        </div>

        <div class="row">
            <div class="col-4" id="some-custom-id">
                {{ form_label(form.lePays, 'Pays') }}
                {{  form_widget(form.lePays) }}
            </div>
            <div class="col-4" id ="some-custom-id">
                {{  form_label(form.lesTypes, 'Types de navires acceptés') }}
                {{  form_widget(form.lesTypes) }}
            </div>
        </div>
    </div>
    <button type='submit' class='btn btn-success'>Créer </button>
    {{  form_end(form) }}    
{% endblock %}